<div class="panel panel-primary">
	<div class="btn-group btn-group-justified" role="group" aria-label="...">
		<div class="btn-group" role="group">
			<button type="button" class="btn {{if dealNow 'btn-success'}}" {{action 'dealNow' true}}>Deal</button>
		</div>
		<div class="btn-group" role="group">
			<button type="button" class="btn {{unless dealNow 'btn-success'}}" {{action 'dealNow' false}}>Order</button>
		</div>
	</div>
	<div class="panel-heading text-center">
		<p class="info">{{market.instrumentName}}</p>
		<p class="info">{{market.tidyExpiry}}</p>
	</div>
	<div class="panel-body">
		<div class="btn-group btn-group-justified" role="group" aria-label="...">
			<div class="btn-group" role="group">
				<button type="button" class="btn {{if isBuy 'btn-primary'}}" {{action 'changeDirection' true}}>Buy - {{market.BID}}</button>
			</div>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-default {{unless isBuy 'btn-danger'}}" {{action 'changeDirection' false}}>Sell - {{market.OFFER}}</button>
			</div>
		</div>
		{{outlet}}
	</div>
	{{#if dealNow}}
		{{deal-now isBuy=isBuy openPosition="openPosition"}}
	{{else}}
		{{order-later workingOrder="workingOrder"}}
	{{/if}}
</div>
